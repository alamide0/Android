<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    android:background="@drawable/frame_list"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="25dip" >

        <TextView
            style="@style/text_left"
            android:text="维护时间" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_right"
            android:text="2016-04-04 17:15:36" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="25dip" >

        <TextView
            style="@style/text_left"
            android:text="里程数" />

        <TextView
            android:id="@+id/tv_mileage"
            style="@style/text_right"
            android:text="15000km" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/text_left"
                android:text="汽油量" />

            <TextView
                android:id="@+id/tv_oil"
                style="@style/text_right"
                android:text="20%" />
        </RelativeLayout>

        <View
            android:layout_width="0.3dip"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/text_left"
                android:text="车灯状态" />

            <ImageView
                android:id="@+id/iv_light"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/text_left"
                android:text="引擎状态" />

            <ImageView
                android:id="@+id/iv_engin"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="0.3dip"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/text_left"
                android:text="刹车状态" />

            <ImageView
                android:id="@+id/iv_trans"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>