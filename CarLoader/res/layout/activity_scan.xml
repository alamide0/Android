<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zsy="http://schemas.android.com/apk/res/com.car.loader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.car.loader.ui.HeaderView
        android:id="@+id/h_header"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        zsy:title="维护信息" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/frame"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            >

            <ImageView
                android:id="@+id/iv_sign"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                 />
            <ProgressBar 
                android:layout_width="20dp" 
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/pb_loader"
                android:layout_marginLeft="8dip"/>

            <TextView
                android:id="@+id/tv_brand"
                style="@style/text_right"
                android:layout_centerVertical="true"
                android:text="" />
        </RelativeLayout>

        <View
            style="@style/draw_line"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            >

            <TextView
                style="@style/text_left"
                android:text="型号" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_type"
                style="@style/text_right"
                android:text="" 
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            style="@style/draw_line"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
             >

            <TextView
                style="@style/text_left"
                android:text="车牌号" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_number"
                style="@style/text_right"
                android:text="" 
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            style="@style/draw_line"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            >

            <TextView
                style="@style/text_left"
                android:text="发动机号" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_engin_number"
                style="@style/text_right"
                android:text="" 
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            style="@style/draw_line"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            >

            <TextView
                style="@style/text_left"
                android:text="车身级别" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_bodylevel"
                style="@style/text_right"
                android:text="" 
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            style="@style/draw_line"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
             >

            <TextView
                style="@style/text_left"
                android:text="里程数" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_mileage"
                style="@style/text_right"
                android:text="" 
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            style="@style/draw_line"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dip"
                 >

                <TextView
                    style="@style/text_left"
                    android:text="汽油量" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_oil"
                    style="@style/text_right"
                    android:text="" 
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View 
                android:layout_width="0.3dip"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dip"
                 >

                <TextView
                    style="@style/text_left"
                    android:text="车灯状态"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_light"
                    style="@style/text_right"
                    android:text=""
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

       

        <View
            style="@style/draw_line"
          />
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dip"
                 >

                <TextView
                    style="@style/text_left"
                    android:text="发动机" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_engin_state"
                    style="@style/text_right"
                    android:text="" 
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View 
                android:layout_width="0.3dip"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dip"
                 >

                <TextView
                    style="@style/text_left"
                    android:text="变速器" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_tran_state"
                    style="@style/text_right"
                    android:text="" 
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>        
    </LinearLayout>

</LinearLayout>